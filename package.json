{
	"name": "notice-everything-creative",
	"version": "2.0.0",
	"private": true,
	"scripts": {
		"cross-env": "cross-env",
		"clean.nuxt": "rimraf .nuxt",
		"dev": "cross-env NODE_ENV=development nodemon --watch ./src --ext 'ts,js' --exec ts-node -r tsconfig-paths/register --project tsconfig.server.json src/server/index.ts",
		"build.client": "API=https://www.noticeeverythingcreative.com/api nuxt build --modern=server",
		"build.server": "tsc -p tsconfig.server.json",
		"build.prod": "run-s clean.nuxt build.client build.server",
		"deploy": "ts-node --project scripts/tsconfig.deploy.json scripts/deploy.ts",
		"start": "nuxt start",
		"start.prod": "NODE_ENV=production node .nuxt/server/index.js",
		"generate": "API=https://www.noticeeverythingcreative.com/api nuxt generate",
		"post-update": "yarn upgrade --latest",
		"rimraf": "rimraf"
	},
	"dependencies": {
		"@nestjs/common": "^6.8.3",
		"@nestjs/core": "^6.8.3",
		"@nestjs/platform-express": "^6.8.3",
		"@noticeeverything/nest": "^1.0.0",
		"@nuxt/typescript-build": "latest",
		"@nuxtjs/axios": "^5.8.0",
		"@nuxtjs/vuetify": "^1.9.1",
		"compression": "^1.7.4",
		"config": "^3.2.5",
		"consola": "^2.11.3",
		"contentful": "^7.13.1",
		"cross-env": "^7.0.0",
		"morgan": "^1.9.1",
		"node-sass": "^4.13.0",
		"nuxt": "^2.10.2",
		"reflect-metadata": "^0.1.13",
		"rxjs": "~6.4.0",
		"vue": "^2.6.10",
		"vue-property-decorator": "^8.3.0",
		"vue-template-compiler": "^2.6.10"
	},
	"devDependencies": {
		"@babel/core": "^7.7.5",
		"@types/inquirer": "^6.5.0",
		"@types/jest": "^25.1.1",
		"@types/moment-timezone": "^0.5.12",
		"@types/shelljs": "^0.8.6",
		"copy-webpack-plugin": "^5.1.1",
		"inquirer": "^7.0.4",
		"moment": "^2.24.0",
		"moment-timezone": "^0.5.27",
		"nodemon": "^2.0.2",
		"npm-run-all": "^4.1.5",
		"sass-loader": "^8.0.0",
		"shelljs": "^0.8.3",
		"ts-node": "^8.5.4",
		"tsconfig-paths": "^3.9.0",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.10",
		"webpack-node-externals": "^1.7.2"
	}
}
