{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": [
			"esnext",
			"esnext.asynciterable",
			"dom"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./*"
			],
			"@/*": [
				"./src/*"
			]
		},
		"types": [
			"node",
			"@nuxt/types",
			"@nuxt/vue-app",
			"@nuxtjs/axios",
			"jest"
		]
	}
}
